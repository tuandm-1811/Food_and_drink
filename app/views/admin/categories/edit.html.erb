<div class="container bench">
  <div class="card card-warning">
    <div class="card-header">
      <h3 style="text-align: center;">Edit Category</h3>
    </div>
        <!-- /.card-header -->
    <div class="card-body">
        <%= form_for [:admin, @category] do |f|%>
          <div class="custom-file">
            <label>Avatar</label>
            <%= f.file_field :image%>
          </div>
          <div class="form-group">
            <label>Name</label>
            <%= f.text_field :name, class:"form-control" , placeholder:"Enter ..." %>
          </div>
          <div class="form-group">
            <%= f.submit "Generate", class:"btn btn-outline-warning"%>
          </div>
        <% end %>
    </div>
  </div>
</div>