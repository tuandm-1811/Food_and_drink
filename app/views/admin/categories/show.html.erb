<div class="card">
  <div class="card-header">
    <h2>Sản phẩm</h2>
    <%= link_to new_admin_category_product_path(@category), class:"btn btn-warning" do %>
      Tạo sản phẩm <i class='fas fa-pencil-alt'></i>
    <% end %>
  </div>
  <!-- /.card-header -->

  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tên Sản phẩm</th>
          <th> Thông tin </th> 
          <th>Giá cũ</th>
          <th>Giá mới</th>
          <th>Thể loại</th>
          <th> Thao tác </th>
        </tr>
      </thead>
      <tbody id="myTable">   
        <% @category.products.each_with_index  do |product, index| %>
        <%= render 'product', product: product, index: index %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>