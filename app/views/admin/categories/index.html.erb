<div class="container">
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
    Create category
  </button>

  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Create</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <%= form_for :category, url: admin_categories_path do |f|%>
          <div class="modal-body">
           <div class="custom-file">
              <b>Avata</b>
              <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
              <%= f.file_field :image, class:"custom-file-input", id:"validatedCustomFile"%>
            </div>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class:"form-control" , placeholder:"Enter ..." %>
            </div>
          </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <div class="form-group">
              <%= f.submit "Generate", class:"btn btn-outline-warning"%>
             </div>
          </div>         
        <% end %>
      </div>
    </div>
  </div>
  
</div>
  <div class="card">
  <div class="card-header">
    <h2 >Categories</h2>
  </div>
  <input class="form-control" id="myInput" type="text" placeholder="Search..">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th> Avatar</th>
          <th>Name Category</th>
          <th> Action </th>
          <th> Show Detail </th>
        </tr>
      </thead>
    <tbody id="myTable">  
        <% @categories.each_with_index  do |category, index| %>
          <%= render 'category', category: category, index: index %>
        <% end %>
    </tbody>
  </table>
  </div>
  <script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
  </script>
 
  