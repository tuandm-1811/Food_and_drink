<div class="card">
  <div class="card-header">
    <!-- Button to Open the Modal -->
    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
      Tạo danh mục <i class='fas fa-pencil-alt'></i>
    </button>
    <!-- The Modal -->
    <div class="modal" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content modal_fix">
        
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Tạo</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          
          <!-- Modal body -->
          <%= form_for :category, url: admin_categories_path do |f|%>
            <div class="modal-body">
            <div class="custom-file">
                <b>Ảnh</b>
                <label class="custom-file-label" for="validatedCustomFile">Chọn file...</label>
                <%= f.file_field :image, class:"custom-file-input", id:"validatedCustomFile"%>
              </div>
              <div class="form-group">
                <label>Tên</label>
                <%= f.text_field :name, class:"form-control" , placeholder:"Nhập ..." %>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <div class="form-group">
                <%= f.submit "Tạo", class:"btn btn-outline-warning"%>
              </div>
            </div>         
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <h2>Danh mục</h2>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th> Ảnh</th>
          <th>Tên danh mục</th>
          <th> Thao tác </th>
          <th> Hiển thị chi tiết </th>
        </tr>
      </thead>
    <tbody id="myTable">  
        <% @categories.each_with_index  do |category, index| %>
          <%= render 'category', category: category, index: index %>
        <% end %>
    </tbody>
  </table>
  </div>
  <script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
  </script>
 
  