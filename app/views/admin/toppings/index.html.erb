<div class="container bench">
  <h2> Tạo Topping </h2>
  <%= form_for :topping, url: admin_toppings_path, remote:true do |f|%>
  <%# [:admin, @category.products] %>
    <div class="form-group">
      <label> Tên </label>
      <%= f.text_field :name, placeholder:"Nhập tên topping", class:"form-control",required: 'true' %>
    </div>
    <div class="form-group">
      <label>Giá</label>
      <%= f.text_field :price , placeholder:"Nhập giá topping", class:"form-control" ,required: 'true'%>
    </div>
    <div class="form-group">
      <label>Thể loại</label>
      <%= f.select :kind, Topping.kinds.keys, {} , class: 'form-control'%>
    </div>
    <%= f.submit "Tạo Topping", class: "btn btn-primary" %>
  <% end %>
</div>
<!-- output -->
<div class="card">
  <div class="card-header">
    <h2 style="text-align: center;">Toppings</h2>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Tên</th>
          <th>Giá</th>
          <th>Thể loại</th>
        </tr>
      </thead>
      <tbody id="add-topping">  
        <% @toppings.each do |topping| %>
          <%= render 'topping', topping: topping %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>