<div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
  <div class="all-meal">
    <div class="top">
      <%= link_to category_product_path(product.category.id,product) do %>
        <div class="bg-gradient"></div>
      <% end %>
      <div class="top-img">
        <%= link_to category_product_path(product.category.id,product) do %>
          <%= image_tag product.images.first %>
        <% end %>
      </div>
      <div class="logo-img">
        <%= image_tag product.category.image if product.category.image.attached? %>
      </div>
      <div class="top-text">
        <div class="heading">
          <h4>
            <%= link_to category_product_path(product.category.id,product) do %>
              <%= product.name_product%>
            <% end %>
          </h4>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="sub-heading">
        <h3>
          <%= link_to category_product_path(product.category.id,product) do %>
            <%= product.category.name%>
          <% end %>
        </h3>
        <p></p>
      </div>
      <br/>
      <div class="bottom-text">
        <div class="delivery"><i class="fas fa-shopping-cart"></i>Phí giao hàng : miễn phí</div>
        <div class="time"><i class="far fa-clock"></i>Thời gian giao hàng : 30 phút</div>
      </div>
    </div>
  </div>
</div>