<div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
  <div class="all-meal">
    <div class="top">
      <div class="top-img">
        <%= link_to category_product_path(product.category.id,product) do %>
          <%= image_tag product.images.first%>
        <% end %>
      </div>
      <div class="logo-img">
        <%= image_tag product.category.image %>
      </div>
      <div class="top-text">
        <div class="sub-heading">
          <p><%= product.price %>VND</p>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="bottom-text">
        <h4>
          <%= link_to category_product_path(product.category.id,product) do %>
            <%= product.name_product%>
          <% end %>
        </h4>
      </div>
      <div class="bottom-text">
          <%=product.category.name%>
      </div>
      <div class="bottom-text">
        <div class="delivery"><i class="fas fa-shopping-cart"></i>Delivery Free : Free</div>
        <div class="time"><i class="far fa-clock"></i>Delivery Time : 30 Min</div>
        <div class="star">
          Rating
          <span>4.5</span>
        </div>
      </div>
    </div>
  </div>
</div>