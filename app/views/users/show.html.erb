<section class="title-bar">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="left-title-text">
					<h3>Tài khoản của tôi</h3>
					</div>
				</div>
				<div class="col-md-6">
					<div class="right-title-text">  
						<ul>
							<li class="breadcrumb-item">
								<%=link_to "Trang chủ", root_path %>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Tài khoản của tôi</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="all-profile-details">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
					<div class="left-tab-links">
						<div class="nav nav-pills nav-stacked nav-tabs ui vertical menu fluid">
							<a href="#about" data-toggle="tab" class="item user-tab cursor-pointer">Về tôi</a>
							<a href="#order-history" data-toggle="tab" class="item user-tab cursor-pointer">Lịch sử đơn hàng</a>	
						</div>						
					</div>				
				</div>
				<div class="col-lg-9">
					<div class="tab-content">
						<div class="tab-pane" id="about">
							<div class="profile-about">
								<div class="tab-content-heading">
									<h4>Về tôi</h4>
									<%= link_to "Edit", edit_user_path(current_user)%>
								</div>
								<div class="about-dtp">
									<div class="about-bg">
										<ul>
											<li>
												<div class="dp-detail">
													<h6>Tên đẩy đủ</h6>
													<p><%= current_user.name%></p>
												</div>
											</li>
											<li>
												<div class="dp-detail">
													<h6>Email</h6>
													<p><%= current_user.email%></p>
												</div>
											</li>
											<li>
												<div class="dp-detail">
													<h6>Ngày sinh</h6>
													<p><%=current_user.birth%></p>
												</div>
											</li>
											<li>
												<div class="dp-detail">
													<h6>Giới tính</h6>
													<p><%= current_user.gender %></p>
												</div>
											</li>
											<li>
												<div class="dp-detail">
													<h6>Tài khoản xã hội</h6>
													<div class="my-social-links">
														<a href="https://www.facebook.com/" class="socail-btn-link f-btn"><i class="fab fa-facebook-f"></i></a>
														<a href="https://www.google.com.vn/?hl=vi" class="socail-btn-link g-btn"><i class="fab fa-google"></i></a>
														<a href="https://www.instagram.com/?hl=vi" class="socail-btn-link i-btn"><i class="fab fa-instagram"></i></a>
														<a href="https://www.youtube.com/" class="socail-btn-link y-btn"><i class="fab fa-youtube"></i></a>
													</div>
												</div>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div>			
						<div class="tab-pane" id="order-history">
							<div class="profile-about">
								<div class="tab-content-heading">
									<h4> Lịch sử đơn hàng </h4>
									<br/>
								</div>
								<div class="my-orders">
									<div class="row">
										<div class="col-lg-12 col-md-12 col-12">
											<div class="my-checkout">
												<div class="table-responsive">
													<table class="table">
														<thead>
															<tr>
																<th> Sản Phẩm</th>
																<th> Đơn đã đặt</th>
																<th> Tổng giá</th>
																<th> Trạng thái </th>
															</tr>
														</thead>
														<tbody>
															<% @orders.each do |order|%>
																<tr>
																	<td>
																		<% order.cart.products.each do |product| %>
																			<%= product.name_product + ',' %>
																		<% end %>
																	</td>
																	<td>
																		<i class="far fa-clock"></i>
																		<%= time_ago_in_words(order.created_at) if order.created_at %> ago.
																		<%= order.created_at.strftime "%B %e, %Y" %>
																	</td>
																	<td><%= order.save_price_to_order.to_f %>VND</td>
																	<td><%= order.status %></td>
																</tr>
															<% end %>
														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>	
					</div>
				</div>
			</div>
		</div>
	</section>