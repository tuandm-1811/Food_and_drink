<section class="login_register">          
  <div class="container">         
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-6 col-12">
        <span class="login_title"><h1>Đăng nhập</h1></span>
        <div class="login-container">
          <div class="row">     
            <div class="col-lg-12 col-md-12 col-12">                
              <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
                <div class="login-form"> 
                  <div class="login-logo">           
                      <%= link_to root_path do %>
                        <%= image_tag 'logo1.jpg', class:"logo"%>
                      <% end %>       
                  </div> 
                  <div class="social-btns">
                    <button class="facebook-btn"><i class="fab fa-facebook-f"></i> Tiếp tục với facebook</button>
                    <button class="google-btn"><i class="fab fa-google"></i> Tiếp tục với Google</button>
                  </div>
                  <div class="or">
                    <p> Hoặc </p>
                  </div>                  
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"video-form" %>             
                  </div>
                  <div class="form-group">
                    <%= f.label :Mật_khẩu %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class:"video-form"  %>          
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <%= f.check_box :remember_me, class:"form-controll" %>
                      <%= f.label :Nhớ_tôi_trên_máy_tính_này %>
                    </div>
                  <% end %>
                  <%= f.submit "Đăng nhập", class:"login-btn btn-link" %>
                  <% if devise_mapping.recoverable?%>
                    <%= link_to new_user_password_path do %>
                      <span style="color:#ffa803;">Phục hồi </span>
                    <% end %>
                  <% end %>
                    <p>Không có tài khoản? 
                      <%= link_to signup_path do %>
                        <span style="color:#ffa803;">- Đăng ký ngay</span>
                      <% end %>
                    </p>
                  </div>                    
                </div>  
              <% end %>
            </div>
          </div>            
        </div>            
      </div>        
    </div>      
  </div>
</section>