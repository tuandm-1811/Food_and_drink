<section class="login_register">      
  <div class="container">         
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-6 col-12">
        <h1>Đăng ký ngay</h1>
        <div class="login-container">
          <div class="row">     
            <div class="col-lg-12 col-md-12 col-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="login-form">
                  <div class="login-logo">  
                    <%= link_to root_path do %>
                      <%= image_tag 'logo1.jpg', class:"logo" %>
                    <% end %>                
                  </div>
                  <div class="create-text"><h3>Tạo tài khoản của bạn</h3></div>
                  <div class="form-group">
                    <%= f.label :Tên %><br />
                    <%= f.text_field :name, autofocus: true, class:"video-form"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"video-form"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Mật_khẩu %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> ký tự tối thiểu)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password",class:"video-form" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :Xác_nhận_mật_khẩu %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"video-form" %>
                  </div>
                  <div class="form-group form-check-inline">
                    <%= f.label :Nam, class: "form-check-label"%>
                    <%= f.radio_button :gender, "women", class:"form-check-input"%>
                    <%= f.label :Nữ, class: "form-check-label"%>
                    <%= f.radio_button :gender, "men", class:"form-check-input"%>
                    <%= f.label :Khác, class: "form-check-label"%>
                    <%= f.radio_button :gender, "other", class:"form-check-input"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Ngày_sinh %>
                    <%= f.date_field :birth, class: 'form-control'%>
                  </div>
                  <div class="actions">
                    <%= f.submit "Đăng ký",class:"login-btn btn-link" %>
                  </div>
                  <div class="forgot-password"> 
                    <p>Bạn đã có tài khoản?
                      <%= link_to  login_path do %>
                        <span style="color:#ffa803;"> - Đăng nhập ngay</span>
                      <% end %>
                    </p>
                  </div>  
                </div>
              <% end %>
            </div>
          </div>            
        </div>            
      </div>        
    </div>      
  </div>
</section>